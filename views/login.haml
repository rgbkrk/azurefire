- if @failed
  .flash.error
    Invalid username or password.
%form{ :method => 'post' }
  %table
    %tr
      %td.label
        %label{:for => 'username'} Username:
      %td.input
        %input{:type => 'text', :id => 'username', :name => 'username'}
    %tr
      %td.label
        %label{:for => 'password'} Password:
      %td.input
        %input{:type => 'password', :id => 'password', :name => 'password'}
    %tr
      %td{:colspan => 2}
        %input{:type => 'submit', :value => 'Log in'}
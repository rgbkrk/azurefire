.query
  %p.current= "You are currently viewing #{@query}."
%ul.results
  - @results.each_with_index do |post, index|
    %li{ :class => ('odd' if index.odd?) }
      %span.timestamp= post.timestamp.strftime '%d %b %Y %I:%M%P'
      %span.separator \\
      %span.name= post.username
      %a{ :href => "/news/#{post.url_slug}" }= post.title
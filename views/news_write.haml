%form.post{ :method => 'post' }
  %p
    %input.title{ :type => 'text', :name => 'title', :value => @post.title }
  %p
    %textarea{ :width => 80, :height => 100, :name => 'body' }
      = @post.body
  %p
    %input{ :type => 'submit', :name => 'submit', :value => 'Submit' }
    %input{ :type => 'submit', :name => 'preview', :value => 'Preview' }